[run]
branch = True
source = app
omit =
    */tests/*
    */venv/*
    */site-packages/*
    */__init__.py

[report]
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code
    def __repr__
    if self.debug

    # Don't complain if tests are run in optimized mode
    if __name__ == '__main__'

    # Ignore abstract methods
    @abc.abstractmethod

    # Ignore type hinting comments
    type: ignore

[html]
directory = coverage_html_report

[xml]
output = coverage.xml
