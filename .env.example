# ===========================================
# NoVacancy Environment Configuration
# ===========================================
# Copy this file to .env and update as needed
# cp .env.example .env

# Kaggle API (optional - only needed for data download)
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# ===========================================
# Database Configuration
# ===========================================

# Shared credentials (used by all databases)
DB_USER=novacancy-user
DB_PASSWORD=penthousesuite
DB_PORT=5432

# Bronze Database (raw data)
BRONZE_DB_HOST=bronze-db
BRONZE_DB=novacancy-bronze

# Silver Database (processed data)
SILVER_DB_HOST=silver-db
SILVER_DB=novacancy-silver

# Gold Database (predictions)
GOLD_DB_HOST=gold-db
GOLD_DB=novacancy-gold

# ===========================================
# MLflow Configuration
# ===========================================
MLFLOW_DB_HOST=mlflow-db
MLFLOW_DB=mlflow
MLFLOW_TRACKING_URI=http://mlflow:5000

# ===========================================
# Test Database (for pytest)
# ===========================================
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password
TEST_DB_HOST=test-db
TEST_DB=novacancy-test
TEST_DB_PORT=5432
